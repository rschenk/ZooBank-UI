<script type="text/javascript" charset="utf-8">
	$(function(){
		_.templateSettings = {
		  interpolate : /\{\{(.+?)\}\}/g
		};
		var registrationFormTemplate = _.template("<!DOCTYPE html PUBLIC '-//W3C//DTD HTML 4.01//EN'><html><head><title></title></head><body><div class='inlineRegistration'><form class='uniForm'><fieldset id='nomenclaturalActs' class='inlineLabels'><legend>Nomenclatural Acts</legend><div class='ctrlHolder'><label for='rank_id'>Taxonomic rank</label><select id='rank_id' name='rank_id'><option>Species</option></select></div><div class='ctrlHolder'><label for='name'>Species epithet</label><input name='name' placeholder='' size='35' maxlength='50' type='text' class='textInput required' value='{{ name }}'></div><div class='ctrlHolder'><label for='authorship'>Authorship</label><input name='authorship' id='authorship' placeholder='' size='35' maxlength='50' type='text' class='textInput required' value='{{authorship}}'></div><div class='ctrlHolder'><label for='parent_name'>Parent name</label><input name='parent_name' id='parent_name' placeholder='' size='35' maxlength='50' type='text' class='textInput required'></div><div class='buttonHolder'><button type='submit' class='primaryAction small'>Register Name</button><button type='submit' id='btn_canel_login' class='secondaryAction'>Cancel</button></div></fieldset></form></div></body></html>");
		$('.registerButton, .candidateName').click(function(){
			var $li   = $(this).closest('li');
			var $name = $li.find('.candidateName');
			var $registrationForm = $li.find('.inlineRegistration');
			var taxonName  = $name.data('name');
			var authorship = $name.data('authorship');
			
			$li.toggleClass('open');
			
			if( $li.hasClass('open') ) {
				
				if($registrationForm.length > 0) {
					$registrationForm.slideDown();
				} else {
					$(registrationFormTemplate({name: taxonName, authorship: authorship})).appendTo($li).hide().slideDown();
				}
			} else {
				$registrationForm.slideUp();
			}
			

			
			return false;
		});
		
	});
</script>