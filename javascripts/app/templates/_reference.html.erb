<!--
  Publication/Citation Information
-->
        
<fieldset id="reference_fields" class="inlineLabels">
  <legend>Publication</legend>
  <div class="container">
    <div class="ctrlHolder">
      <p class="label">Publication type</p>
      <ul class="blockLabels">
		  <% _.each(view.referenceTypes, function(type, i){ %>
        <li>
          <label><input type="radio" name="referenceTypeId" value="<%= type.id %>"> <%= type.label %></label>
        </li>
      <% }) %>
      </ul>
    </div>
    <div class="ctrlHolder">
      <p class="label">Publication status</p>
      <ul class="blockLabels">
        <li>
          <label for="published_no"><input type="radio" id="published_no" name="published" value="false"> This work has not yet been published</label>
        </li>
        <li>
          <label for="published_yes"><input type="radio" id="published_yes" name="published" value="true"> This work was published on:</label>
        </li>
      </ul>
    </div>
    <div class="ctrlHolder">
      <p class="label">Date of publication</p>
      <ul class="alternate dateSelect">
        <li>
          <label for="year">Year</label> <input name="year" id="year" placeholder="e.g. 1957" size="8" maxlength="4" type="text" class="textInput required auto">
        </li>
        <li>
          <label for="month">Month</label> <select name="month" id="month" class="selectInput auto">
			<option value=''> </option>
            <option value='1'>January</option>
            <option value='2'>February</option>
            <option value='3'>March</option>
            <option value='4'>April</option>
            <option value='5'>May</option>
            <option value='6'>June</option>
            <option value='7'>July</option>
            <option value='8'>August</option>
            <option value='9'>September</option>
            <option value='10'>October</option>
            <option value='11'>November</option>
            <option value='12'>December</option>
          </select>
          <p class="formHint">Optional</p>
        </li>
        <li>
          <label for="day">Day</label> <input name="day" id="day" size="2" maxlength="2" type="text" class="textInput auto">
          <p class="formHint">Optional</p>
        </li>
      </ul>
    </div>
            
    <div class="ctrlHolder">
      <p class="label">Authors</p>
      <ul id="authorList">
      </ul>
    </div>

	<!-- Render the type-specific fields here -->
	<div id="typeSpecificReferenceFields"></div>
  </div>
</fieldset>
        
